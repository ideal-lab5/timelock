{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}

